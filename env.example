# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/paradigm_trading"

# Zerodha API Configuration
ZERODHA_API_KEY=your_api_key_here
ZERODHA_API_SECRET=your_api_secret_here
ZERODHA_REDIRECT_URI=http://localhost:3000/auth/callback

# Trading Configuration
TRADING_MODE=PAPER  # PAPER or LIVE
TRADING_CAPITAL=100000
MAX_DAILY_LOSS=5000
MAX_POSITION_SIZE=0.1
MAX_RISK_PER_TRADE=0.02

# ML Strategy Configuration
ML_LOOKBACK_PERIOD=50
ML_PREDICTION_HORIZON=5
ML_CONFIDENCE_THRESHOLD=0.7
ML_RETRAIN_INTERVAL=60
ML_FEATURE_ENGINEERING=true

# Risk Management
STOP_LOSS_PERCENTAGE=2.0
TAKE_PROFIT_PERCENTAGE=4.0
TRAILING_STOP_PERCENTAGE=3.0
MAX_DRAWDOWN=0.1

# Instruments to Trade
TRADING_INSTRUMENTS=NIFTY,BANKNIFTY,RELIANCE,TCS,INFY
TRADING_TIMEFRAMES=5min,15min,1hour

# Technical Indicators
RSI_PERIOD=14
MACD_FAST=12
MACD_SLOW=26
MACD_SIGNAL=9
BOLLINGER_PERIOD=20
BOLLINGER_STDDEV=2
SMA_SHORT=20
SMA_LONG=50

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_LOG_INTERVAL=60
METRICS_RETENTION_DAYS=30

# Notifications
ENABLE_NOTIFICATIONS=true
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id
EMAIL_NOTIFICATIONS=false
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_email_password

# WebSocket Configuration
WEBSOCKET_ENABLED=true
WEBSOCKET_RECONNECT_INTERVAL=5000
WEBSOCKET_MAX_RECONNECT_ATTEMPTS=10

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=logs/trading-bot.log
ERROR_LOG_FILE_PATH=logs/error.log
DEBUG_LOG_FILE_PATH=logs/debug.log

# Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
CACHE_TTL=3600

# Security Configuration
ENABLE_SECURITY_VALIDATION=true
MAX_REQUEST_SIZE=1048576
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Backtesting Configuration
BACKTEST_START_DATE=2024-01-01
BACKTEST_END_DATE=2024-12-31
BACKTEST_INITIAL_CAPITAL=100000
BACKTEST_COMMISSION_RATE=0.0005

# ML Model Configuration
ML_MODEL_TYPE=linear  # linear, polynomial, exponential
ML_TRAINING_EPOCHS=100
ML_LEARNING_RATE=0.01
ML_VALIDATION_SPLIT=0.2

# Position Management
ENABLE_POSITION_MONITORING=true
POSITION_CHECK_INTERVAL=30000
AUTO_CLOSE_POSITIONS=false
POSITION_TIMEOUT_HOURS=24

# Error Handling
ENABLE_ERROR_RECOVERY=true
MAX_ERROR_RETRIES=3
ERROR_RETRY_DELAY=5000

# System Configuration
NODE_ENV=production
PORT=3000
HOST=localhost
ENABLE_HTTPS=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# Development Configuration
ENABLE_HOT_RELOAD=false
ENABLE_DEBUG_MODE=false
ENABLE_TEST_MODE=false 
