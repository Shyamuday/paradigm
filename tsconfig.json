{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@/auth/*": ["auth/*"],
      "@/market-data/*": ["market-data/*"],
      "@/strategy/*": ["strategy/*"],
      "@/risk/*": ["risk/*"],
      "@/order/*": ["order/*"],
      "@/position/*": ["position/*"],
      "@/logger/*": ["logger/*"],
      "@/scheduler/*": ["scheduler/*"],
      "@/config/*": ["config/*"],
      "@/storage/*": ["storage/*"],
      "@/dashboard/*": ["dashboard/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
} 